.inputOuter {
	padding-bottom: 15px;
}

.controlRoot {
	margin: 0 0 12px !important;
}

.container {
	.root {
		background: #4e4e4e;
	}

	.input {
		font-size: 14px;
		width: 100%;
		height: 26px;
		line-height: 26px;
		padding: 0 0 0 6px;
		color: #fff;
		background: #4e4e4e;
		border: 0;
		outline: 0;
		outline-offset: 0;

		&:hover {
			background: #4e4e4e;
		}

		&:focus {
			outline: 1px solid #1baee1;
		}
	}
}
